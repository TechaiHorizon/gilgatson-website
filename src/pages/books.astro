  <style>
    h1 {
      text-align: center;
      margin-bottom: 1rem;
    }
    
    .page-intro {
      text-align: center;
      color: var(--color-gray);
      margin-bottom: 3rem;
      font-size: 1.125rem;
    }
    
    .page-intro a {
      font-weight: 600;
      text-decoration: none;
    }
    
    .book-section {
      margin-bottom: 4rem;
    }
    
    .book-display {
      display: grid;
      grid-template-columns: 300px 1fr;
      gap: 3rem;
      margin-bottom: 3rem;
    }
    
    .book-cover img {
      width: 100%;
      height: auto;
      border-radius: 4px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    
    .book-details h2 {
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
    }
    
    .subtitle {
      font-size: 1.25rem;
      color: var(--color-gray);
      margin-bottom: 1.5rem;
    }
    
    .book-meta {
      display: flex;
      gap: 1.5rem;
      margin-bottom: 1.5rem;
      color: var(--color-gray);
      font-size: 0.875rem;
    }
    
    .description p {
      margin-bottom: 1rem;
      line-height: 1.8;
    }
    
    .buy-links {
      display: flex;
      gap: 1rem;
      margin-top: 2rem;
      flex-wrap: wrap;
    }
    
    .btn {
      display: inline-block;
      padding: 0.75rem 1.5rem;
      background: var(--color-accent);
      color: white;
      text-decoration: none;
      border-radius: 4px;
      font-weight: 600;
      transition: background 0.2s;
    }
    
    .btn:hover {
      background: #1d4ed8;
    }
    
    .btn-primary {
      background: var(--color-accent);
    }
    
    .btn-disabled {
      background: var(--color-gray);
      cursor: not-allowed;
    }
    
    hr {
      border: none;
      border-top: 1px solid var(--color-border);
      margin: 4rem 0;
    }
    
    .series-section {
      margin-top: 4rem;
    }
    
    .series-section h2 {
      text-align: center;
      margin-bottom: 1rem;
    }
    
    .series-intro {
      text-align: center;
      color: var(--color-gray);
      margin-bottom: 3rem;
      font-size: 1.125rem;
    }
    
    .books-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
    }
    
    .book-card {
      padding: 2rem;
      background: white;
      border: 1px solid var(--color-border);
      border-radius: 8px;
    }
    
    .book-card h3 {
      margin-bottom: 0.5rem;
    }
    
    .book-tagline {
      font-size: 0.875rem;
      color: var(--color-gray);
      margin-bottom: 1rem;
    }
    
    @media (max-width: 768px) {
      .book-display {
        grid-template-columns: 1fr;
        gap: 2rem;
      }
      
      .book-cover {
        max-width: 300px;
        margin: 0 auto;
      }
      
      .books-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</BaseLayout>
